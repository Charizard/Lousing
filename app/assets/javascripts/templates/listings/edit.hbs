<div class="new_listing_form" style="margin-top: 15px;">
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label class="control-label">BHK</label>
      {{input type="number" placeholder="BHK" class="form-control" value=this.model.bhk}}
    </div>
    <div class="form-group">
      <label class="control-label">Address</label>
      {{input type="text" placeholder="Address" class="form-control" value=this.model.address}}
    </div>
    <div class="form-group">
      <label class="control-label">Property Type</label>
      {{input type="text" placeholder="Property Type" class="form-control" value=this.model.property_type}}
    </div>
    <div class="form-group">
      <label class="control-label">Build-Up Area</label>
      {{input type="number" placeholder="Build-Up Area" class="form-control" value=this.model.buildup_area}}
    </div>
    <div class="form-group">
      <label class="control-label">Bathrooms</label>
      {{input type="number" placeholder="Bathrooms" class="form-control" value=this.model.bathrooms}}
    </div>
    <div class="form-group">
      <label class="control-label">Furnishing Type</label>
      {{input type="text" placeholder="Furnishing Type" class="form-control" value=this.model.furnish_type}}
    </div>
    <div class="form-group">
      <label class="control-label">Rent*</label>
      {{input type="number" placeholder="Rent" class="form-control" value=this.model.rent}}
    </div>
    <div class="form-group">
      <label class="control-label">Security Deposit*</label>
      {{input type="number" placeholder="Security Deposit" class="form-control" value=this.model.security_deposit}}
    </div>
    <div class="form-group">
      <button {{ action 'update' }} class="btn btn-blue btn-block">Edit Listing</button>
    </div>
  </form>
</div>
