<li class="row property-listing">
  {{#link-to 'property_detail' propertyListing}}
      <div class="col-md-4 thumbnail">
        <img data-src="holder.js/90x90" {{bind-attr src="propertyListing.imageUrl"}}/>
      </div>
      <div class="col-md-8">
        {{propertyListing.bhk}} BHK, {{propertyListing.furnishType}}</p>
        <h3>
          <span class="rupee-symbol"></span>
          <b>{{propertyListing.rent}}</b>
        </h3>
        {{#unless hideShortlist}}
          <i {{bind-attr class=":icon-top-right :icon-shortlist propertyListing.isShortlisted:icon-filled:icon-empty"}} {{action 'toggleShortlist' bubbles=false}}></i>
        {{/unless}}
      </div>
  {{/link-to}}
</li>
