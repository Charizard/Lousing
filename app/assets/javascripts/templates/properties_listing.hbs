<div role="tabpanel">

  <!-- Nav tabs -->
  {{#unless currentUser.is_landlord}}
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="tab active"><a href="#all_properties" aria-controls="all_properties" role="tab" data-toggle="tab">{{length}} Results</a></li>
      <li role="presentation" class="tab"><a href="#shortlisted_properties" aria-controls="shortlisted_properties" role="tab" data-toggle="tab">{{currentUser.short_listed_properties.length}} Shortlist</a></li>
    </ul>
  {{/unless}}

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="all_properties">
      <div class="property-listing-index">
        {{#each}}
          <li class="row property-listing">
            {{#link-to 'property_detail' this}}
                <div class="col-md-4 thumbnail">
                  <img data-src="holder.js/90x90" {{bind-attr src="image_url"}}/>
                </div>
                <div class="col-md-8">
                  {{bhk}} BHK, {{furnish_type}}</p>
                  <h3>
                    <span class="rupee-symbol"></span>
                    <b>{{rent}}</b>
                  </h3>
                  {{#unless currentUser.is_landlord}}
                    <i {{bind-attr class=":icon-top-right :icon-shortlist isShortlisted:icon-filled:icon-empty"}} {{action 'toggleShortlist' bubbles=false}}></i>
                  {{/unless}}
                </div>
            {{/link-to}}
          </li>
        {{/each}}
      </div>
    </div>
    {{#unless currentUser.is_landlord}}
      <div role="tabpanel" class="tab-pane fade" id="shortlisted_properties">
        <div class="property-listing-index">
          {{render "shortlisted_properties" currentUser.short_listed_properties}}
        </div>
      </div>
    {{/unless}}
  </div>

</div>

